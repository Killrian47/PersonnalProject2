<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('assets/img/favicon.ico') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {% endblock %}

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/61fed8f126.js" crossorigin="anonymous"></script>

        {% block javascripts %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
            <script defer src="{{ asset('assets/js/index.js') }}"></script>
        {% endblock %}
    </head>
    <body class="d-flex flex-column">
        {% include('_partials/_header.html.twig') %}
    <div class="flex-fill d-flex flex-row-nowrap justify-content-center">
        <div class="content d-flex flex-row-nowrap flex-fill py-50">
            {{ include('_partials/_sidebar.html.twig') }}
            <div class="flex-fill">
                {% block body %}Contenu
                {% endblock %}
            </div>
        </div>
    </div>
    {{ include('_partials/_footer.html.twig')}}
    </body>
</html>
